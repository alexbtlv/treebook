<div class="page-header">
 <h1>All of the statuses</h1>
</div>

<%= link_to "Post new status", new_status_path, class: "btn btn success" %>

<% @statuses.each do |status| %>
  <div class="status">
    <div class="row">
      <div class="col-md-1">
        <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
      </div>
      <div class="col-md-7">
        <strong>Name</strong>
      <p><%= status.content %></p>
      <%= status_document_link(status) %>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
          | <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: { Confirm: "are you sure?"} %>
        </span>
      </div>
      </div>
    </div>
  </div>
<% end %>